{
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./build/",
    "strictNullChecks": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
